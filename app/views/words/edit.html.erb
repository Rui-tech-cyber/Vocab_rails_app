<div class="container my-5">
  <h1 class="mb-4 text-center">単語編集</h1>

  <div class="d-flex justify-content-center">
    <div style="width: 100%; max-width: 500px;">
      <%= form_with model: @word, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :term, "英単語" %>
          <%= f.text_field :term, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :meaning, "意味" %>
          <%= f.text_area :meaning, class: "form-control" %>
        </div>
        <div class="d-grid gap-2">
          <%= f.submit "更新", class: "btn btn-primary" %>
        </div>
      <% end %>

      <hr class="my-4">

      <div class="text-center">
        <%= link_to "一覧に戻る", word_books_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
