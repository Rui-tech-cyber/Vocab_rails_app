<h1><%= @word_book.title %>に単語を追加</h1>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" data-bs-toggle="tab" href="#manual">手動で単語を追加</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-bs-toggle="tab" href="#search">検索で単語を追加</a>
  </li>
</ul>

<div class="tab-content mt-3">
  <div class="tab-pane fade show active" id="manual">
    <%= form_with model: [@word_book, @word], local: true do |f| %>
      <div class="mb-3">
        <%= f.label :term, "英単語" %>
        <%= f.text_field :en_word, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :meaning, "意味" %>
        <%= f.text_field :ja_word, class: "form-control" %>
      </div>
      <%= f.submit "追加", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="tab-pane fade" id="search">
    <%= form_with url: search_word_book_words_path(@word_book), method: :get, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :term, "英単語を検索" %>
        <%= f.text_field :term, class: "form-control" %>
      </div>
      <%= f.submit "検索", class: "btn btn-secondary" %>
    <% end %>

    <% if @results.present? %>
      <ul class="mt-3">
        <% @results.each do |res| %>
          <li>
            <strong><%= res[:word] %></strong> : <%= res[:meaning] %>
            <br>
            例文: <%= res[:example] %>
            <%= button_to "追加", word_book_words_path(@word_book, word: { term: res[:word], meaning: res[:meaning] }), method: :post, class: "btn btn-sm btn-success mt-1" %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<hr>
<%= link_to "英単語一覧に戻る", word_books_path, class: "btn btn-secondary mt-3" %>
