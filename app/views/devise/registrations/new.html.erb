<div class="d-flex justify-content-center mt-5">
  <div class="card shadow-sm p-4" style="max-width: 500px; width: 100%;">
    <h2 class="text-center mb-4">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :name, "ユーザー名", class: "form-label fw-bold" %>
        <%= f.text_field :name, autofocus: true, class: "form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label fw-bold" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted">（<%= @minimum_password_length %>文字以上）</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label fw-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
      </div>

      <div class="d-grid gap-2 mt-3">
        <%= f.submit "登録する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-decoration-none" %>
    </div>
  </div>
</div>
