<h1><%= @word_book.title %></h1>

<h3>登録済み単語一覧</h3>
<ul>
  <% @words.each do |word| %>
    <li>
      <strong><%= word.term %></strong> : <%= word.meaning %>
      <%= link_to "編集", edit_word_book_word_path(@word_book, word), class: "btn btn-sm btn-warning" %>
      <%= button_to "削除", word_book_word_path(@word_book, word), method: :delete, class: "btn btn-sm btn-danger",
            data: { term: word.term, url: word_book_word_path(@word_book, word) } %>
    </li>
  <% end %>
</ul>

<hr>

<h3>英単語を検索して追加</h3>
<%= form_with url: search_words_path, method: :get, local: true do |f| %>
  <%= hidden_field_tag :default_word_book_id, @word_book.id %>
  <div class="mb-3">
    <%= f.label :term, "検索する英単語" %>
    <%= f.text_field :term, class: "form-control" %>
  </div>
  <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>

<hr>

<h3>単語を手動で追加</h3>
<%= form_with scope: :word, url: words_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :word_book_id, value: @word_book.id %>
  <div class="mb-3">
    <%= f.label :term, "英単語" %>
    <%= f.text_field :term, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :meaning, "意味" %>
    <%= f.text_area :meaning, class: "form-control" %>
  </div>
  <%= f.submit "追加する", class: "btn btn-primary" %>
<% end %>

<hr>

<%= link_to "この英単語帳でテストをする", new_exam_path(word_book_id: @word_book.id), class: "btn btn-secondary mb-3" %>

<%= button_to "この単語帳を削除", "#", class: "btn btn-danger mt-3 delete-wordbook-btn", data: { title: @word_book.title, url: word_book_path(@word_book) } %>

<%= link_to "一覧に戻る", word_books_path, class: "btn btn-secondary mt-3" %>

<div class="modal fade" id="deleteWordBookModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">単語帳を削除しますか？</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p id="deleteModalWordBookTitle"></p>
        <%= button_to "削除する", "#", method: :delete, class: "btn btn-danger", id: "confirmDeleteWordBookBtn" %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("turbo:load", () => {
  const deleteModalEl = document.getElementById("deleteWordBookModal")
  if (!deleteModalEl) return

  const deleteModal = new bootstrap.Modal(deleteModalEl)
  const modalTitle = document.getElementById("deleteModalWordBookTitle")
  const confirmBtn = document.getElementById("confirmDeleteWordBookBtn")

  document.querySelectorAll(".delete-wordbook-btn").forEach(btn => {
    btn.addEventListener("click", (e) => {
      e.preventDefault()
      const title = btn.dataset.title
      const url = btn.dataset.url

      modalTitle.textContent = `"${title}" を本当に削除しますか？`
      confirmBtn.setAttribute("formaction", url)

      deleteModal.show()
    })
  })

})
</script>
