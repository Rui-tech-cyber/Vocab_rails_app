<div class="container text-center mt-5">
  <h1 class="fw-bold mb-4"><%= @word_book.title %></h1>

  <h3 class="mb-3">📖 登録済み単語一覧</h3>
  <% if @words.any? %>
    <ul class="list-group w-75 mx-auto text-start mb-4">
      <% @words.each do |word| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= word.term %></strong> : <%= word.meaning %>
          </div>
          <div class="btn-group">
            <%= link_to "編集", edit_word_book_word_path(@word_book, word), class: "btn btn-sm btn-warning hover-scale" %>
            <%= button_to "削除", word_book_word_path(@word_book, word), method: :delete,
                  class: "btn btn-sm btn-danger hover-scale",
                  data: { term: word.term, url: word_book_path(@word_book, word) } %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">まだ単語が登録されていません。</p>
  <% end %>

  <hr class="my-4">

  <h3 class="mb-3">🔍 英単語を検索して追加</h3>
  <%= form_with url: search_words_path, method: :get, local: true, class: "w-75 mx-auto text-start mb-4" do |f| %>
    <%= hidden_field_tag :default_word_book_id, @word_book.id %>
    <div class="input-group mb-3">
      <%= f.text_field :term, class: "form-control", placeholder: "検索する英単語を入力" %>
      <button class="btn btn-primary hover-scale" type="submit">検索</button>
    </div>
  <% end %>

  <hr class="my-4">

  <h3 class="mb-3">✍️ 単語を自分で追加</h3>
  <%= form_with scope: :word, url: words_path, method: :post, local: true, class: "w-75 mx-auto text-start mb-4" do |f| %>
    <%= f.hidden_field :word_book_id, value: @word_book.id %>
    <div class="mb-3">
      <%= f.label :term, "英単語" %>
      <%= f.text_field :term, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :meaning, "意味" %>
      <%= f.text_area :meaning, class: "form-control" %>
    </div>
    <%= f.submit "追加する", class: "btn btn-primary hover-scale" %>
  <% end %>

  <hr class="my-4">

  <div class="d-flex flex-row gap-4 justify-content-center">
    <%= link_to "📝 この英単語帳でテストをする", new_exam_path(word_book_id: @word_book.id), class: "btn btn-secondary rounded-pill shadow-sm hover-scale" %>
    <%= button_to "🗑️ この単語帳を削除", "#", class: "btn btn-danger rounded-pill shadow-sm hover-scale delete-wordbook-btn", data: { title: @word_book.title, url: word_book_path(@word_book) } %>
    <%= link_to "📚 一覧に戻る", word_books_path, class: "btn btn-outline-secondary rounded-pill shadow-sm hover-scale" %>
  </div>
</div>

<div class="modal fade" id="deleteWordBookModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">⚠️ 単語帳を削除しますか？</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        <p id="deleteModalWordBookTitle" class="fw-bold text-danger"></p>
        <div class="d-flex justify-content-center gap-3 mt-3">
          <%= button_to "削除する", "#", method: :delete, class: "btn btn-danger hover-scale", id: "confirmDeleteWordBookBtn" %>
          <button type="button" class="btn btn-secondary hover-scale" data-bs-dismiss="modal">キャンセル</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("turbo:load", () => {
  const deleteModalEl = document.getElementById("deleteWordBookModal")
  if (!deleteModalEl) return

  const deleteModal = new bootstrap.Modal(deleteModalEl)
  const modalTitle = document.getElementById("deleteModalWordBookTitle")
  const confirmBtn = document.getElementById("confirmDeleteWordBookBtn")

  document.querySelectorAll(".delete-wordbook-btn").forEach(btn => {
    btn.addEventListener("click", (e) => {
      e.preventDefault()
      const title = btn.dataset.title
      const url = btn.dataset.url

      modalTitle.textContent = `"${title}" を本当に削除しますか？`
      confirmBtn.setAttribute("formaction", url)

      deleteModal.show()
    })
  })
})
</script>

<style>
  .hover-scale {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .hover-scale:hover {
    transform: scale(1.05);
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
  }
</style>
